<%= simple_form_for [@site, :settings, @page] do |f| %>
  <%= f.input :parent_id, collection: nested_set_options(@site.pages) {|i| "#{'-' * i.level} #{i.title}" } %>
  <%= f.input :title %>
  <%= f.input :slug %>
  <%= f.input :content, :input_html => { :class => "tinymce" } %>
  <%= f.button :submit %>
<% end %>
