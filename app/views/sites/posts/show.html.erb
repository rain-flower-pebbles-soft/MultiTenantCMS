<div class="panel panel-default">
  <div class="panel-heading">
    <h3><%= @post.title %></h3>
  </div>
  <div class="panel-body">
    <%= sanitize @post.content %>
  </div>
</div>

<%= render_widget(:comments, :display, :commentable => @post) %>

<%= render partial: 'sites/comments/form', locals: { commentable: @post } %>
